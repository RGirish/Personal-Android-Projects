<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"   
    android:layout_height="wrap_content"   
    android:background="#ffffff">
    
<LinearLayout 
    android:layout_width="fill_parent"   
    android:layout_height="wrap_content"   
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/debate"
            android:onClick="debate"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/debate" />
        
        
        <ImageView
            android:id="@+id/dumbc"
            android:onClick="dumbc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dumbc" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/mock"
            android:onClick="mock"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mock" />
        
        <ImageView
            android:id="@+id/gaming"
            android:layout_width="150dp"
            android:onClick="gaming"
            android:layout_height="150dp"
            android:src="@drawable/gaming" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" >

        
        <ImageView
            android:id="@+id/surprise"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="surprise"
            android:src="@drawable/surprise" />        
        
        <ImageView
            android:id="@+id/shortfilm"
            android:layout_width="150dp"
            android:onClick="shortfilm"
            android:layout_height="150dp"
            android:src="@drawable/shortfilm" />
        
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" >

        
        <ImageView
            android:id="@+id/adzap"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="adzap"
            android:src="@drawable/adzap" />
        
        <ImageView
            android:id="@+id/treasure"
            android:layout_width="150dp"
            android:onClick="treasure"
            android:layout_height="150dp"
            android:src="@drawable/treasure" />
        
    </LinearLayout>
    
</LinearLayout>
</ScrollView>