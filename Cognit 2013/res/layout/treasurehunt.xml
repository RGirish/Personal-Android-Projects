<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/truflehunt" />

            <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treasure Hunt"
        android:typeface="monospace"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:text="Common Rules:\n
•	A team can have 3-5 persons.\n
•	No electronic devices should be used.\n
•	Registration can be done on-spot.\n\n
Prelims:\n
•	Duration-15 Minutes.\n
•	15 Questions.\n
•	Top 7 teams will reach the Finals.\n\n
Finals:\n
•	Duration-1 Hour 15 Minutes.\n
•	5 Clues lead to the destination.\n
•	Clues will be handed over only after a dare.\n
•	Teams should travel only by foot.\n
•	Teams should not split up.\n
•	Top 2 teams win.\n
•	Judges’ decision will be considered final."
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
</ScrollView>