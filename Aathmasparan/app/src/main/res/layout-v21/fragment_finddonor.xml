<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/bloodtype_finddonor"
            android:layout_margin="20dp"
            android:entries="@array/bloodtypes"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Spinner
            android:id="@+id/state_finddonor"
            android:layout_margin="20dp"
            android:entries="@array/states"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <EditText
            android:id="@+id/city_finddonor"
            android:textSize="18sp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:hint="City / District / Town"
            android:maxLength="100"
            android:inputType="text"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Find Donor"
            android:textColor="#fff"
            android:onClick="onClickFindDonor"
            android:layout_margin="26dp"
            android:padding="20dp"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/donorsLinearLayout"
            android:layout_width="match_parent"
            android:background="#fff"
            android:padding="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>

</ScrollView>